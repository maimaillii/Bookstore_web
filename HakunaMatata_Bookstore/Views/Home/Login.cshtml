@using HakunaMatata_Bookstore.Models
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/layout/Home_layout.cshtml";
}
<style>


    /* Add styles to the form container */
    .containerr {
        position: absolute;
        right: 35%;
        margin: 20px;
        max-width: 350px;
        padding: 16px;
        background-color: white;
    }

    .popp_login {
        position: fixed;
        background-color: rgba(0,0,0,.5);
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 999;
        display: none;
        padding:10px;
    }
</style>
<div style="width:30%;margin-left:475px;margin-top:50px;background:white;padding:50px">
    <div id="popp_login">
        @using (Html.BeginForm("Dangnhap", "Home"))
        {
            <h1 style="color:red; padding-top:-500px; text-align:center">
                @ViewBag.Thongbaoo
            </h1>
            <h1 style="color: #045E8B;text-align: center;">ĐĂNG NHẬP</h1>

            <label for="email" style="margin-top: 20px;margin-bottom:15px"><b>Tên tài khoản / Email</b></label><br />
            <input type="text" style="padding:10px;" placeholder="Nhập tài khoản / Email" name="Taikhoan" required="">
            <br />
            <label for="psw" style="margin-top: 20px;margin-bottom:15px "><b>Mật khẩu</b></label><br />
            <input type="password" style="padding:10px" placeholder="Nhập mật khẩu " name="Matkhau" required="">
            <br /> <br />
            <button type="submit" style="padding:10px;margin-top:20px" class="btnn" id="btnDangNhap">Đăng nhập</button>
            <div style="background-color: #045E8B;height: 1.25cm;display: block;">

                <a href="DangKy.html" style="margin-top: 10px ;display: block;text-decoration: none;font-size: 15px;text-align: center;padding-top: 14px;">Đăng ký </a>
            </div>
            <a class="qmk" href="" style="color: red;font-size: 15px;float: right;margin-top: 5px; ">Quên mật khẩu ?</a>

        }
    </div>
</div>
