@using HakunaMatata_Bookstore.Models
@model SACH


@{
    ViewBag.Title = "Xemchitiet";
    Layout = "~/Views/layout/Home_layout.cshtml";
}
<title>Hakuna Matata</title>
<link href="~/Content/new1.css" rel="stylesheet" />
<style>
    .hedding {
        font-size: 20px;
        color: #ab8181;
    }

    .main-section {
        position: absolute;
        left: 50%;
        right: 50%;
        transform: translate(-50%, 5%);
    }

    .left-side-product-box img {
        width: 100%;
    }

    .left-side-product-box .sub-img img {
        margin-top: 5px;
        width: 83px;
        height: 100px;
    }

    .right-side-pro-detail span {
        font-size: 15px;
    }

    .right-side-pro-detail p {
        font-size: 25px;
        color: #a1a1a1;
    }

    .right-side-pro-detail .price-pro {
        color: #E45641;
    }

    .right-side-pro-detail .tag-section {
        font-size: 18px;
        color: #5D4C46;
    }

    .pro-box-section .pro-box img {
        width: 100%;
        height: 200px;
    }
</style>
<script type='text/javascript' src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js'></script>
<script type='text/javascript' src='https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js'></script>
<script type='text/javascript' src='https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js'></script>
<div class="container">
    <div class="col-lg-8 border p-3 main-section bg-white">
        <div class="row hedding m-0 pl-3 pt-0 pb-3">
            Chi tiết sản phẩm
        </div>
        <div class="row m-0">
            <div class="col-lg-4 left-side-product-box pb-3">
                <img src="@Url.Content("~/Content/Sach/"+Model.Hinhanh)" class="border p-3">
                <span class="sub-img">
                    <img src="@Url.Content("~/Content/Sach/"+Model.Hinhanh)" class="border p-2">
                    <img src="@Url.Content("~/Content/Sach/"+Model.Hinhanh)" class="border p-2">
                    <img src="@Url.Content("~/Content/Sach/"+Model.Hinhanh)" class="border p-2">
                </span>
            </div>
            <div class="col-lg-8">
                <div class="right-side-pro-detail border p-3 m-0">
                    <div class="row">
                        <div class="col-lg-12">
                            <span>Manga</span>
                            <p class="m-0 p-0">@Model.TenSP</p>
                        </div>
                        <div class="col-lg-12">
                            <p class="m-0 p-0 price-pro">@Model.Dongia.Value.ToString("#,##")</p>
                            <hr class="p-0 m-0">
                        </div>
                        <div class="col-lg-12 pt-2">
                            <h5>Chi tiết sản phẩm</h5>
                            <span>
                                <div class="content has-table">
                                    <table>
                                        <tbody>
                                            <tr>
                                                <td>Lượt xem: </td>
                                                <td>@Model.Luotxem</td>
                                            </tr>
                                            <tr>
                                                <td>Ngày xuất bản: </td>
                                                <td>2021-07-01 00:00:00</td>
                                            </tr>
                                            <tr>
                                                <td>Kích thước: </td>
                                                <td>13 x 18 cm</td>
                                            </tr>
                                            <tr>
                                                <td>Loại bìa: </td>
                                                <td>Bìa mềm</td>
                                            </tr>
                                            <tr>
                                                <td>Số trang: </td>
                                                <td>236</td>
                                            </tr>
                                            <tr>
                                                <td>Nhà xuất bản: </td>
                                                <td>@Model.NHAXUATBAN.TenNXB</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                                @Model.Mota
                            </span>
                            <hr class="m-0 pt-2 mt-2">
                        </div>
                        <div class="col-lg-12">
                            <p class="tag-section"><strong>Tag : </strong><a href="">@Model.THELOAI.Tentheloai</a>
                        </div>
                        <div class="col-lg-12">
                            <h6>Số lượng :</h6>
                            <input type="number" class="form-control text-center w-100" value="1">
                        </div>
                        <div class="col-lg-12 mt-3">
                            <div class="row">
                                <div class="col-lg-6 pb-2">
                                    <a href="Giohang.html" class="btn btn-danger w-100">Thêm vào giỏ hàng</a>
                                </div>
                                <div class="col-lg-6">
                                    <a href="Giohang.html" class="btn btn-success w-100">Mua ngay</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-lg-12 text-center pt-3">
                <h4>Các sản phẩm khác</h4>
            </div>
        </div>
        <div class="row mt-3 p-0 text-center pro-box-section">
            <div class="col-lg-3 pb-2">
                <div class="pro-box border p-0 m-0">
                    <img src="~/Content/picture/BachDaHanh.png" />
                </div>
            </div>
            <div class="col-lg-3 pb-2">
                <div class="pro-box border p-0 m-0">
                    <img src="~/Content/picture/Hakuba.png" />

                </div>
            </div>
            <div class="col-lg-3 pb-2">
                <div class="pro-box border p-0 m-0">
                    <img src="~/Content/picture/LuatTamThuc.png" />
                </div>
            </div>
            <div class="col-lg-3 pb-2">
                <div class="pro-box border p-0 m-0">
                    <img src="~/Content/picture/Morisaki.png" />
                </div>
            </div>
        </div>
    </div>
</div>
<script type='text/javascript'></script>
<div class="clearfix"></div>
