@using HakunaMatata_Bookstore.Models
@model IEnumerable<SACH>
@{
    ViewBag.Title = "Sanpham";
    Layout = "~/Views/layout/Sanpham.cshtml";
}
<style>
    .button {
        display: inline-block;
        border-radius: 4px;
        background-color: lightskyblue;
        border: none;
        color: #FFFFFF;
        text-align: center;
        font-size: 15px bold;
        padding: 10px;
        width: 100%;
        margin-left: 0px;
        transition: all 0.5s;
        cursor: pointer;
        -webkit-transition-duration: 0.4s; /* Safari */
        transition-duration: 0.4s;
    }

        .button span {
            cursor: pointer;
            display: inline-block;
            position: relative;
            transition: 0.5s;
        }

            .button span:after {
                content: '\00bb';
                position: absolute;
                opacity: 0;
                top: 0;
                right: -20px;
                transition: 0.5s;
            }

        .button:hover {
            background-color: lightsalmon;
            color: white;
        }

            .button:hover span {
                padding-right: 25px;
            }

                .button:hover span:after {
                    opacity: 1;
                    right: 0;
                }

    .container_swapne {
        width: 238.719px;
    }

    .div_left {
        width: 112.3595px;
        float: left;
    }

    .div_right {
        width: 112.3595px;
        float: left;
    }
</style>
    <div style="width:100%;height:50px;">
        <h2 class="tittle-w3">Hãy chọn cho mình 1 quyển sách :3</h2>
        <div class="gallery-grids">
            @foreach (var item in Model.OrderBy(n => n.Dongia))
            {
                <div class="col-md-4 gallery-grid wow fadeInUp animated" data-wow-delay=".5s">
                    <div class="grid">
                        <figure class="effect-apollo">
                            <a class="example-image-link" href="@Url.Action("Xemchitiet", "Danhmucsanpham", new { id = item.MaSP })" data-lightbox="example-set" data-title="">
                                <img src="@Url.Content("~/Content/Sach/" + item.Hinhanh)" alt="">
                                <figcaption>
                                    <p>Chi tiết <br> Sản phẩm </p>
                                </figcaption>
                            </a>
                        </figure>
                        <div class="container_swapne" style="text-align:left; margin-left:10px"><a>@item.TenSP</a></div>
                        <div class="container_swapne"><b style="font-size:20px;">@item.Dongia.Value.ToString("#,##") VND</b></div>
                        <div class="container_swapne">

                            <div class="div_left">
                                <button class="button" type="submit" style="vertical-align:middle"><span><a class="glyphicon glyphicon-shopping-cart" aria-hidden="true" href="@Url.Action("Themgiohang", "Giohang", new {@MaSP=item.MaSP,@strURL= Request.Url.ToString()})">Thêm</a></span></button>
                            </div>

                            <div class="div_right">
                                <button class="button" type="submit" style="vertical-align:middle"><span>Mua ngay</span></button>
                            </div>

                        </div><br />

                    </div>
                </div>
            }
                <div class="clearfix"></div>
            </div>
    </div>


