@using HakunaMatata_Bookstore.Models;
@model IEnumerable<LOAITHANHVIEN>


@{
    ViewBag.Title = "PhanQuyen";
    Layout = "~/Views/layout/Thongke.cshtml";
    WebGrid grid = new WebGrid(source: Model, rowsPerPage: 10);
}

<br />
<br />
<h2>Danh sách Loại thành viên</h2>
@*Thể hiện dữ liệu thông qua control webGrid*@
@grid.GetHtml(
    tableStyle: "divTable",
    headerStyle: "gridHead",
    footerStyle: "gridFooter",
    rowStyle: "gridRow",
    alternatingRowStyle: "gridAltRow",
    columns: grid.Columns(
    grid.Column("Maloaithanhvien", "Mã loại thành viên"),
    grid.Column("Tenloaithanhvien", "Loại thành viên"),
    grid.Column(format: p => @Html.ActionLink("Phân quyền", "Phanquyen", new { id = p.Maloaithanhvien }))

    ))


@*Css cho từng Style của table*@
<style>
    .divTable {
        width: 100%;
        border: 1px solid #999999;
    }

        .divTable td {
            border: 1px solid #999999;
        }

    .gridHead {
        background-color: Green;
    }

        .gridHead > th > a {
            color: #fff;
        }

    .gridFooter {
        font-weight: bold;
    }
