
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/layout/Thongke.cshtml";
}

<h1>Thống kê</h1>
<style>
    ::-webkit-input-placeholder {
        color: red;
    }

    ::-moz-placeholder {
        color: red;
    }

    ::-ms-placeholder {
        color: red;
    }

    ::placeholder {
        color: red;
    }
</style>
<br />
<div class="market-updates">
    <div class="col-md-6 market-update-gd">
        <div class="market-update-block clr-block-3">
            <div class="col-md-4 market-update-right">
                <i class="fa fa-usd"></i>
            </div>
            <div class="col-md-8 market-update-left">
                <h4>Tổng doanh thu</h4>
                <h3>@ViewBag.TongDoanhThu.ToString("#,##") VND</h3>
                <p>Bước khởi đầu mới!</p>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
    <div class="col-md-6 market-update-gd">
        <div class="market-update-block clr-block-2">
            <div class="col-md-4 market-update-right">
                <i class="fa fa-usd"> </i>
            </div>
            <div class="col-md-8 market-update-left">
                <h4>Tổng doanh thu tháng 1/2022</h4>
                <h3>@ViewBag.TongDoanhThuTheoThang.ToString("#,##") VNĐ</h3>
                <p>Ổn định</p>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
    <div class="col-md-6 market-update-gd">
        <div class="market-update-block clr-block-1">
            <div class="col-md-4 market-update-right">
                <i class="fa fa-users"></i>
            </div>
            <div class="col-md-8 market-update-left">
                <h4>Thành viên</h4>
                <h3>@ViewBag.TongThanhVien</h3>
                <p>Hiện đã có @ViewBag.TongThanhVien thành viên!!</p>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>

    <div class="col-md-6 market-update-gd">
        <div class="market-update-block clr-block-4">
            <div class="col-md-4 market-update-right">
                <i class="fa fa-shopping-cart" aria-hidden="true"></i>
            </div>
            <div class="col-md-8 market-update-left">
                <h4>Số đơn đặt hàng</h4>
                <h3>@ViewBag.TongDDH</h3>
                <p>Cũng ổn đủ mua trà sữa :D</p>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
    <div class="clearfix"> </div>

    <div class="clearfix"> </div>
    <div class="col-md-6 market-update-gd">
        <div class="market-update-block clr-block-3">
            <div class="col-md-4 market-update-right">
                <i class="fa fa-users"></i>
            </div>
            <div class="col-md-8 market-update-left">
                <h4>Tổng khách hàng</h4>
                <h3>@ViewBag.TongKH</h3>
                <p>Hiện đã có @ViewBag.TongKH Khách hàng rồi :3</p>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
</div>
<span style="margin-left:15px;color:white">Hãy nhập tháng __________ Hãy nhập năm</span>
@using (Ajax.BeginForm("Index", "ThongKe", new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "ThongBao" }))
{
    
    <input type="text" name="txtThang" placeholder="Hãy nhập tháng..." style="margin-left:15px;" />
    <input type="text" placeholder="Hãy nhập năm" name="txtNam" />
    <input type="submit" value="Thống kê" />
}